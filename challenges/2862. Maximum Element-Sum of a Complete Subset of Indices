var maximumSum = function(nums) {
    var n = nums.length;
    
    // Find squares 
    var sq = [1];
    while(sq.at(-1) < n) sq.push((sq.length+1) ** 2);

    var res = 0;
    for(let i=1; i<=n; ++i) {
        var cur = 0;
        for(var s of sq) { // s*i will give {i*1, i*4, i*9, ...}
            var idx = s*i;
            if(idx>n) break;
            cur += nums[idx-1];
        }
        res = Math.max(res, cur);
    }

    return res;
};
