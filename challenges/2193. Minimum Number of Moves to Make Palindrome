/**
 * @param {string} s
 * @return {number}
 */
var minMovesToMakePalindrome = function(s) {
    let left = 0, right = s.length-1, ans = 0;
    
    
    function swapStr(str, first, last){
        return str.substr(0, first)
           + str[last]
           + str.substring(first+1, last)
           + str[first]
           + str.substr(last+1);
    }
    
    while (left < right) {
        let l = left, r = right;
        
        while (s[l] != s[r]) {
            r--;
        }
        
        if (l == r) {
            ans++;
            s = swapStr(s, r, r+1);
            continue;
        } else {
            while (r < right) {
                s = swapStr(s, r, r+1);
                ans++;
                r++;
            }   
        }
        left++;
        right--;
    }
    
    return ans;
};
