/**
 * @param {number[]} nums
 * @param {number} k
 * @return {number}
 */
var maxSum = function(A, k) {
     const count = new Array(32).fill(0);

    for (const a of A) {
        for (let i = 0; i < 32; i++) {
            if (a & (1 << i)) {
                count[i]++;
            }
        }
    }

    let res = 0;
    const mod = 1e9 + 7;

    for (let j = 0; j < k; j++) {
        let cur = 0;

        for (let i = 0; i < 32; i++) {
            if (count[i] > 0) {
                count[i]--;
                cur += 1 << i;
            }
        }

    res = (BigInt(res) + BigInt(cur) * BigInt(cur)) % BigInt(mod);
    }

    return Number(res);
};
