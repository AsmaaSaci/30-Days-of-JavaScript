/**
 * @param {number[]} chargeTimes
 * @param {number[]} runningCosts
 * @param {number} budget
 * @return {number}
 */
var maximumRobots = function(chargeTimes, runningCosts, budget) {
  const queue = [];
  const n = chargeTimes.length;
  let [l, r, j, sum] = [0, -1, 0, 0];

  for (let i = 0; i < n; i++) {
    sum += runningCosts[i];
    while (l <= r && chargeTimes[queue[r]] <= chargeTimes[i]) r--;

    queue[++r] = i;

    if (l <= r && chargeTimes[queue[l]] + (i - j + 1) * sum > budget) {
      if (queue[l] === j) l++;
      
      sum -= runningCosts[j++];
    }
  }

  return n - j;
};
