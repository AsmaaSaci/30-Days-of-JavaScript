public class Solution {
    public int CountSubstrings(string s) {
        int n = s.Length;
        if (n <= 0) return 0;

        int ans = 0;
        bool[,] dp = new bool[n, n];

        // Length 1 substrings
        for (int i = 0; i < n; ++i, ++ans)
            dp[i, i] = true;

        // Length 2 substrings
        for (int i = 0; i < n - 1; ++i) {
            dp[i, i + 1] = (s[i] == s[i + 1]);
            ans += dp[i, i + 1] ? 1 : 0;
        }

        // Length â‰¥ 3 substrings
        for (int len = 3; len <= n; ++len)
            for (int i = 0, j = i + len - 1; j < n; ++i, ++j) {
                dp[i, j] = dp[i + 1, j - 1] && (s[i] == s[j]);
                ans += dp[i, j] ? 1 : 0;
            }

        return ans;
    }
}
