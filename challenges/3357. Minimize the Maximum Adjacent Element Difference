const minDifference=t=>{const e=[];let h=[],l=-1!==t[0];for(let n of t){let t=-1!==n;t!==l&&h.length&&(e.push(h),h=[]),h.push(n),l=t}h.length&&e.push(h);let n=[],r=[],f=0;for(let t=0;t<e.length;t++){let h=e[t];if(-1!==h[0]){for(let t=0;t+1<h.length;t++)f=Math.max(f,Math.abs(h[t]-h[t+1]));continue}let l=[];t-1>=0&&l.push(e[t-1][e[t-1].length-1]),t+1<e.length&&l.push(e[t+1][0]),l.sort(((t,e)=>t-e)),1===l.length&&n.push([l[0],h.length>1]),2===l.length&&r.push([l[0],l[1],h.length>1])}if(0===n.length&&0===r.length)return f;const s=t=>{const e=[];for(let[h,l]of n)e.push([h-t,h+t]);for(let[h,l,n]of r)if(n)e.push([h-t,h+t]),e.push([l-t,l+t]);else{let n=l-t,r=h+t;if(n>r)return!1;e.push([n,r])}let h=Math.min(...e.map((([,t])=>t))),l=Math.max(...e.map((([t])=>t)));if(h+t<l)for(let[e,n]of r)if(![h,l].some((h=>Math.abs(e-h)<=t&&Math.abs(n-h)<=t)))return!1;return e.every((([t,e])=>t<=h&&h<=e||t<=l&&l<=e))};let o=f,u=Math.max(...t.filter((t=>-1!==t)));for(;o<u;){let t=Math.floor((o+u)/2);s(t)?u=t:o=t+1}return o};
