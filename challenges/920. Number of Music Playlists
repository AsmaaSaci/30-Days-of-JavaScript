/**
 * @param {number} n
 * @param {number} goal
 * @param {number} k
 * @return {number}
 */
var numMusicPlaylists = function(n, goal, k) {
    const MOD = 1e9 + 7;

    // we initialize dp table 
    const dp = Array.from({ length: goal + 1 }, () =>
        Array(n + 1).fill(0)
    );
    dp[0][0] = 1;

    for (let i = 1; i <= goal; i++) {
        for (let j = 1; j <= n; j++) {
            // we add a new song
            dp[i][j] += dp[i - 1][j - 1] * (n - j + 1);
            dp[i][j] %= MOD;

            // we replay an old song
            if (j > k) {
                dp[i][j] += dp[i - 1][j] * (j - k);
                dp[i][j] %= MOD;
            }
        }
    }

    return dp[goal][n];
};
