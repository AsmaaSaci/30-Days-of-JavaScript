const maxAlternatingSum=(t,e)=>{let l=Array.from({length:t.length},(()=>[])),r=Array(t.length).fill(!1);for(let[t,r]of e)l[t].push(r),l[r].push(t);const o=(e,h,n)=>{r[e]=!0,h.push(e),n.push(t[e]);for(let t of l[e])r[t]||o(t,h,n);return[h,n]};let h=[],n=new Map;for(let t=0;t<r.length;t++)if(!r[t]){let[e,l]=o(t,[],[]);e.sort(((t,e)=>t-e)),l.sort(((t,e)=>e-t));let r=[];for(let t=0;t<e.length;t++)e[t]%2==0&&r.push(e[t]);for(let t=0;t<e.length;t++)e[t]%2!=0&&r.push(e[t]);for(let t=0;t<r.length;t++)n.set(r[t],r[t]%2==0?l[t]:-l[t]);h.push(...r)}let f=0;for(let t of h)f+=n.get(t);return f};
