/**
 * @param {string} colors
 * @param {number[][]} edges
 * @return {number}
 */
var largestPathValue = function(colors, edges) {
    
    const n = colors.length;
    const graph = Array.from({ length: n }, () => []);
    const indegree = Array(n).fill(0);

    // we build graph and indegree array
    for (const [u, v] of edges) {
        graph[u].push(v);
        indegree[v]++;
    }

    // dp[i][c] = max count of color c at node i
    const dp = Array.from({ length: n }, () => Array(26).fill(0));
    const queue = [];

    // we initialize queue with nodes having indegree 0
    for (let i = 0; i < n; i++) {
        if (indegree[i] === 0) queue.push(i);
    }

    let visited = 0;
    let maxColorValue = 0;

    while (queue.length) {
        const u = queue.shift();
        visited++;

        const colorIndex = colors.charCodeAt(u) - 97;
        dp[u][colorIndex]++;
        maxColorValue = Math.max(maxColorValue, dp[u][colorIndex]);

        for (const v of graph[u]) {
            for (let c = 0; c < 26; c++) {
                dp[v][c] = Math.max(dp[v][c], dp[u][c]);
            }
            indegree[v]--;
            if (indegree[v] === 0) queue.push(v);
        }
    }

    return visited === n ? maxColorValue : -1;
};
