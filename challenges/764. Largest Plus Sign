public class Solution {
    public int OrderOfLargestPlusSign(int n, int[][] mines) {
        int[,,] freqTL = new int[n,n,3]; // r, c, [0]- grid cell value, [1]-left ones, [1]- top ones

        for(int i = 0; i < n; i++)
        {
            for(int j = 0; j < n; j++)
            {
                freqTL[i,j,0] = 1;
                freqTL[i,j,1] = 0;
                freqTL[i,j,2] = 0;
            }
        }

        // udpate mines in the freqTL table:
        foreach(int[] m in mines)
        {
            int r = m[0], c = m[1];
            freqTL[r,c,0] = 0;
        }

        // Pre-Cal top/left cnt:
        for(int i = 0; i < n; i++)
        {
            for(int j = 0; j < n; j++)
            {
                int val = freqTL[i,j,0];
                if(val == 1)
                {
                    int left = (j == 0 ? 0 : freqTL[i,j-1, 1]), top = (i == 0 ? 0 : freqTL[i-1, j, 2]);
                    freqTL[i,j,1] = 1+left;
                    freqTL[i,j,2] = 1+top;
                }
            }
        }

        int[] bottom = new int[n];
        int plusMax = 0;
        for(int i = n-1; i >= 0; i--)
        {
            int right = 0;
            int[] bak = new int[n];
            for(int j = n-1; j >= 0; j--)
            {
                int val = freqTL[i,j,0];
                if(val == 0)
                {
                    right = 0;
                    bak[j] = 0;
                }
                else
                {
                    int top = (i == 0 ? 0 : freqTL[i-1, j, 2]);
                    int left = (j == 0 ? 0 : freqTL[i, j-1, 1]);
                    int bot = bottom[j];
                    int minV = Math.Min(Math.Min(top, left), Math.Min(bot, right))+1;
                    plusMax = Math.Max(plusMax, minV);
                    bak[j] = bot+1;
                    right++;
                }
            }

            Array.Copy(bak, bottom, n);
        }

        return plusMax;
    }
}
