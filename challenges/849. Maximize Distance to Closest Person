/**
 * @param {number[]} seats
 * @return {number}
 */
var maxDistToClosest = function(seats) {
    
    let maxDist = 0;
    let lastOccupied = -1;

    for (let i = 0; i < seats.length; i++) {
        if (seats[i] === 1) {
            if (lastOccupied === -1) {
                // Leading zeros: distance is i
                maxDist = i;
            } else {
                // Middle zeros: distance is half the gap
                const gap = i - lastOccupied;
                maxDist = Math.max(maxDist, Math.floor(gap / 2));
            }
            lastOccupied = i;
        }
    }

    // Trailing zeros: distance is seats.length - 1 - lastOccupied
    maxDist = Math.max(maxDist, seats.length - 1 - lastOccupied);

    return maxDist;
};
