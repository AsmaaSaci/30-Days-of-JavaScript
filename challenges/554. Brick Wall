let leastBricks = function (wall) {
    const edgeMap = new Map();

    for (const row of wall) {
        let sum = 0;

        for (let i = 0; i < row.length - 1; i++) {
            sum += row[i];
            edgeMap.set(sum, (edgeMap.get(sum) || 0) + 1);
        }
    }

    let maxEdge = 0;

    for (const val of edgeMap.values()) {
        maxEdge = Math.max(maxEdge, val);
    }

    return wall.length - maxEdge;
}
